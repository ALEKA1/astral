doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title VR BSS
  body
    // Loading spinner
    #spinner
    a-scene
      a-assets#assets
        img(id='sky' src='static/sky.jpg')
      a-sky(src='#sky')
      a-sphere#p1(width='3' height='3' depth='3' position='0 0 -10'
                  color='orange')
        a-animation(attribute='rotation' begin='click' to='0 360 0')
      a-light(type='spot' color='#333' position='-20 0 0' look-at='#p1')
      a-light(type='point' color='#AAA' position='0 5 0')
      a-camera
        a-cursor(color='white')
